@{
    ViewData["Title"] = "GST Portal";
}

<!-- Hero Section -->
<div class="jumbotron text-center bg-primary text-white py-5">
    <img src="~/Images/National-Emblem.png" 
         alt="National Emblem" 
         style="max-height:80px;" class="mb-3" />
    <h1 class="display-5 fw-bold">Goods and Services Tax (GST)</h1>
    <p class="lead">Government of India, States and Union Territories</p>
</div>

<!-- Services Section -->
<div class="container mt-5">
    <div class="row text-center">
        <div class="col-md-4">
            <h4>Search GST Records</h4>
            <p>Find GSTIN details of businesses by GSTIN or Name.</p>
        </div>
        <div class="col-md-4">
            <h4>Download Forms / E-Waybills</h4>
            <p>Get GST forms and e-waybills in PDF/Excel format for easy reference.</p>
        </div>
        <div class="col-md-4">
            <h4>Login to Dashboard</h4>
            <p>Access secure services by logging in with your credentials.</p>
            <!-- 🔹 Removed duplicate Login button -->
        </div>
    </div>
</div>

<!-- Info Section -->
<div class="container mt-5">
    <h3 class="text-center mb-4">Why Use GST Portal (Demo)?</h3>
    <div class="row text-center">
        <div class="col-md-4">
            <h5>Simple Search</h5>
            <p>Quickly find GSTIN details without hassle.</p>
        </div>
        <div class="col-md-4">
            <h5>Official Formats</h5>
            <p>Download reference forms in both PDF and Excel formats.</p>
        </div>
        <div class="col-md-4">
            <h5>Easy Access</h5>
            <p>One-click access to login, search, and download options.</p>
        </div>
    </div>
</div>
