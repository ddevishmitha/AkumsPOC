<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GST Portal</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>

    <!-- Header/Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color:#0a3d91;">
        <div class="container">
            <!-- Logo + Title -->
            <a class="navbar-brand fw-bold d-flex align-items-center" href="/">
                <img src="~/Images/National-Emblem.png" alt="Gov Emblem" style="height:40px;" class="me-2" />
                <span>Goods and Services Tax</span>
            </a>

            <!-- Navbar Toggler for mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Menu Items -->
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/EWayBill">E-Way Bill</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Downloads">Downloads</a></li>
                </ul>
                <div class="d-flex ms-3">
                    <a href="/Account/Register" class="btn btn-outline-light me-2">Register</a>
                    <a href="/Account/Login" class="btn btn-light text-dark">Login</a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Banner -->

    @* <div class="container-fluid p-0 text-center bg-light">
    <img src="~/Images/GST-Logo.png" 
         alt="GST Banner" 
         class="img-fluid my-2" 
         style="max-height:120px;" /> <!-- 🔹 Reduced height -->
   </div> 
  *@

    


    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- News Section -->
    <div class="container mt-4">
        <h5>News and Updates</h5>
        <ul>
            <li>📌 Enhancement of E-Way Bill services – Aug 2025</li>
            <li>📌 Mandatory 2FA from April 2025</li>
            <li>📌 Advisory on filing GSTR-3B returns</li>
        </ul>
    </div>

    <!-- Footer -->
    <footer class="text-center mt-5 p-3 bg-light">
        <p>&copy; 2025 Goods and Services Tax Portal. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
